<% include ../partials/header %>

<section class="sec">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h4 class="mb-4"><strong>CREATE POST</strong>.</h4>
                <hr>
                <div class="form-container">
                    <form>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image_title" placeholder="title">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control mb-3" type="text" name="image_description" placeholder="description"></textarea>
                        </div>
                        <div class="form-group">
                            <input class="form-control border-0" type="file" name="image">
                        </div>
                        <input type="hidden" name="category_id" value="<%= categoryId %>">
                        <div class="form-group">
                            <button class="btn btn-lg btn-default btn-block yellow" id="submit-image">Submit!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</section>

<script src="/js/images/index.js" type="module"></script>
