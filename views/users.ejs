<% include partials/admin/header %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">

                <div class="jumbotron">
                    <h3>Users</h3>
                </div>

                <!-- List of users -->
                <div class="row">
                    <div class="col-lg-2 border">Full Name</div>
                    <div class="col-lg-2 border">Email</div>
                    <div class="col-lg-2 border">Permission</div>
                    <div class="col-lg-2 border">Status</div>
                    <div class="col-lg-4 border">Action</div>
                </div>
                <% data.forEach( elem => { %>
                    <div class="row">
                        <div class="col-lg-2 border"><%= elem.first_name %></div>
                        <div class="col-lg-2 border"><%= elem.last_name %></div>
                        <div class="col-lg-2 border"><%= elem.role_name %></div>
                        <div class="col-lg-2 border"><% if(elem.deleted){ %>
                                                               Deleted
                                                      <%  } else { %>
                                                               Active
                                                            <% } %>
                        </div>
                        <div class="col-lg-4 border">
                        <a href="users/edit/<%= elem.user_id %>">
                            <button>Edit</button>
                        </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<script src="/js/users/all.js" type="module"></script>
<% include partials/admin/footer %>
