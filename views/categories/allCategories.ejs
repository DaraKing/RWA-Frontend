<% include ../partials/admin/header %>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

                    <div class="jumbotron">
                        <h3>Categories</h3>
                        <a href="/admin/categories/create">
                            <button class="btn btn-primary">
                                Create category
                            </button>
                        </a>
                    </div>

                    <!-- List of users -->
                    <div class="row">
                        <div class="col-lg-2 border">ID</div>
                        <div class="col-lg-2 border">Image</div>
                        <div class="col-lg-2 border">Name</div>
                        <div class="col-lg-2 border">Description</div>
                        <div class="col-lg-4 border">Action</div>
                    </div>
                    <% data.forEach( elem => { %>
                        <div class="row">
                            <div class="col-lg-2 border"><%= elem.category_id %></div>
                            <div class="col-lg-2 border"><img style="width: 126px; height: 126px;" src="<%= elem.category_image %>"></div>
                            <div class="col-lg-2 border"><%= elem.category_name %></div>
                            <div class="col-lg-2 border"><%= elem.category_description %></div>
                            <div class="col-lg-4 border">
                            <a href="/admin/categories/edit/<%= elem.category_id %>">
                                <button class="btn btn-warning mt-1">Edit</button>
                            </a>
                            <button class="btn btn-danger delete-category mt-1" id="<%= elem.category_id %>">
                                Delete
                            </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>

<script src="/js/categories/index.js" type="module"></script>
<script src="/js/middleware/index.js" type="module"></script>
<% include ../partials/admin/footer %>
