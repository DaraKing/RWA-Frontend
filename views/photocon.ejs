<% include partials/header %>

<!-- Header -->
<div class="container-fluid p-0">
    <div class="view intro-2">
        <div class="full-bg-img">
            <div class="mask rgba-black-light flex-center">
                <div class="container text-center white-text">
                    <div class="white-text text-center wow fadeInUp">
                        <div>
                            <h1 class="display-4 text-white pt-5 mb-4">PHOTOGRAPHY</h1>
                        </div>
                        <hr style="background: white;">
                        <h5 class="mb-2 text-white">Welcome to the PhotoCon photography contest.</h5>
                        <p class="text-white">Vote on your favorite photo.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contests -->

<section class="text-dark" id="contests">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="text-uppercase">contests</h2>
                <h5 class="text-muted pb-3">Check out our currently active contests.</h5>
                <hr>
            </div>
        </div>
        <div class="row text-center pt-4 d-flex justify-content-center">
            <% data.forEach(elem => { %>
                <div class="col-md-4">
                    <a href="/category/<%= elem.category_id %>">
                        <img src="<%= elem.category_image %>" width="100" height="100">
                    </a>
                    <h4 class="pt-3"><%= elem.category_name %></h4>
                    <p class="lead"><%= elem.category_description %></p>
                </div>
            <% }) %>
        </div>
    </div>
</section>

